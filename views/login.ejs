	</div>
	<div class="container">
		<form class="form-horizontal" method="post" style="width:500px;padding-top:20px;margin:0 auto;" role="form">
		  <div class="form-group">
		    <label for="inputEmail3" class="col-sm-3 control-label">用户名：</label>
		    <div class="col-sm-7">
		      <input type="text" name="username" class="form-control" id="inputEmail3" placeholder="用户名">
		    </div>
		  </div>
		  <div class="form-group">
		    <label for="inputPassword3" class="col-sm-3 control-label">密 &nbsp; 码：</label>
		    <div class="col-sm-7">
		      <input type="password" name="password" class="form-control" id="inputPassword3" placeholder="密码">
		    </div>
		  </div>
		  <% if (message) { %>
			  <div class="form-group">
			    <div class="col-sm-offset-3 col-sm-10">
			      <%= message %>
			    </div>
			  </div>
			<% } %>
		  <div class="form-group">
		    <div class="col-sm-offset-3 col-sm-10">
		      <button type="submit" class="btn btn-primary">登陆</button>
		      <button type="submit" class="btn btn-default">注册</button>
		    </div>
		  </div>
		  	
		</form>
	</div>
<%- include footer %>